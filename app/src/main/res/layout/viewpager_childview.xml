<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/pagerBigImage"
        android:tint="#81131212"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/pagerCastImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="팟캐스트 제목"
                android:id="@+id/pagerCastTitle"
                android:gravity="bottom"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#f7f3f3"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:id="@+id/pagerCategory"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:textColor="#f7f3f3"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pagerCastDbName"
        android:visibility="gone"/>


</FrameLayout>