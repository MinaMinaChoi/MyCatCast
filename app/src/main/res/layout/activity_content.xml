<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:fontFamily="casual"
        android:maxLines="2"
        android:focusable="true"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="casual"
        android:text="TextView"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/castImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">


        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:id="@+id/allplayBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/repeatxml"
                android:visibility="visible"

                />

            <ImageButton
                android:id="@+id/oneplayBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/repeatmint"
                android:visibility="gone" />

        </FrameLayout>

        <!--       <Button
                   android:id="@+id/repeatBtn"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_marginRight="10dp"

                   />-->

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:id="@+id/timermintBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/timermint"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/timerBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/timerxml" />

        </FrameLayout>
        <!--<Button
            android:id="@+id/timerButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="취침타이머" />-->

        <FrameLayout
            android:layout_width="28dp"
            android:layout_height="28dp">

            <ImageButton
                android:id="@+id/cancelDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/downmint"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/castDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/downxml" />

        </FrameLayout>


    </LinearLayout>

    <SeekBar
        android:id="@+id/musicSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />


    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"

        android:fontFamily="casual"
        android:text="duration"
        android:textSize="16sp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">


        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/previous" />

        <ImageButton
            android:id="@+id/backwardButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/backward" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp">

            <ImageButton
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/pause"
                android:scaleType="centerInside"
                android:visibility="invisible" />

            <ImageButton

                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_setting"
                android:visibility="visible" />
            <!--android:src="@drawable/btn_setting"-->

        </FrameLayout>

        <ImageButton
            android:id="@+id/forwardButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/forward" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/next" />

    </LinearLayout>


</LinearLayout>